<div class="container">
  <div class="row">
    <div class="col-md-10" style="border-right: 2px solid grey;">
      <h1><%= @product.name %></h1><br>
      <div class="row">
        <div class="col-md-6">
          <%= image_tag @product.image, class: "img-responsive center-block product-photo" %>
        </div>
        <div class="col-md-4">
          <%= link_to 'Add to Cart', add_to_cart_product_path(@product), class: "btn btn-primary", remote: true, method: :post, style: "margin-top:260px;" %>
        </div>
      </div>
      <br>
      <br>
      <table class="table table-striped table-bordered">
        <tr>
          <th>Name</th>
          <td><%= @product.name %></td>            
        </tr>
        <tr>
          <th>Description</th>
          <td><%= @product.description %></td>
        </tr> 
        <tr>
          <th>Price</th>
          <td><%= @product.price %>$</td>
        </tr>
      </table>


      <%= link_to 'Back', products_path, class: "btn btn-primary" %>
    </div>
    <div class="col-md-2">
      <div id="cart">
        <% if current_cart.cartitems.size == 0 %>
            <div id="cart">
              <div id="cart_tol">
                <h4>Cart(0)</h4>
              </div>
              <hr>
              <div id="cart_tol_p">
                <h4>Total: 0$</h4>
              </div>
        <% else %>
          <%= render partial: "shared/cart" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
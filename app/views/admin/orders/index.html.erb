<div class="container">
  <div class="row">
    <%= link_to 'Product', admin_products_path, class: "btn btn-primary" %> | <%= link_to 'Order', admin_orders_path, class: "btn btn-primary" %>
    <br>
    <br>

    <div class="col-md-12">
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>Order ID</th>
            <th>Price</th>
            <th>#</th>
          </tr>
        </thead>
        <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td>#<%= order.id %></td>
          <td><%= order.total_price %></td>
          <td><%= link_to 'Show', order_path(order) %></td>
        </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    
    <div class="text-center">
      <%= paginate @orders %>
    </div>
    
  </div>

  
</div>